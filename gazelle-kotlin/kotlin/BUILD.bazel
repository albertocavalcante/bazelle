go_test(
    name = "kotlin_test",
    srcs = [
        "config_test.go",
        "generate_test.go",
        "kinds_test.go",
        "parser_test.go",
    ],
    embed = [":kotlin"],
    deps = [
        "@bazel_gazelle//config",
        "@bazel_gazelle//language",
        "@bazel_gazelle//rule",
    ],
)
